.wc-media-wrapper(
ng-class="{overflow: $ctrl.parallaxHeight}")
  wc-settings(
  ng-if="$ctrl.authData"
  icon="photo"
  position="{{$ctrl.position}}"
  margin-top="{{$ctrl.marginTop}}")
    md-menu-item
      md-button
        input.hidden-input(
        type="file"
        ngf-select="$ctrl.update($file)"
        ngf-multiple="false"
        accept="image/*"
        ngf-resize="$ctrl.dimensions")
        span(flex)|Upload image
        md-icon.menu-right(md-menu-align-target)
            |photo
    wc-settings-option(
    ng-if="$ctrl.data.url"
    icon="delete"
    on-click="$ctrl.delete()"
    text="Delete image")

  ng-transclude

  .img-wrapper(
  ng-if="$ctrl.isBackground && ($ctrl.authData || $ctrl.data.url)"
  ng-click="$ctrl.onClick()"
  ng-style="$ctrl.backgroundStyles")
  img(
  ng-if="!$ctrl.isBackground && ($ctrl.authData || $ctrl.data.url)"
  ng-click="$ctrl.onClick()"
  ng-src="{{$ctrl.getUrl($ctrl.data.ref)}}"
  imageonload="$ctrl.onReady()")
